#include <iostream>

int main() {
int score = 0;
int answer1;
int score1;
int answer2;
int score2;
int answer3;
int score3;
std::cout << "what is the name of the world's longest river? \n 1) missouri\n 2) nile\n 3) amazon\n 4) yangtze\n";
std::cin >> answer1;
if (answer1==2) {
  score1=1;
}
else {
  score1=0;
}
std::cout << "your score is " << score+score1;
std::cout << "\nQ2) How many bones are in the human body?\n 1) 92\n 2) 150\n 3) 206\n 4) 10 \n";
std::cin >> answer2;
if (answer2==3) {
  score2 = 1;
}
else {
  score2=0;
}
std::cout << "your score is " << score+score1+score2;
std::cout << "\n What food never spoils? \n1) bread \n2) honey \n3) milk.\n ";
std::cin >> answer3;
if (answer3==2) {
  score3 = 1;
}
else {
  score3 =0;
}
std::cout << "\nyour score is " << score+score1+score2+score3;
if (score+score1+score2+score3==3) {
  std::cout << "\nyou won!";
}
else {
  std::cout << "\nyou lost, better luck next time bud.";
}
}
