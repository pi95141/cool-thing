  std::cout << "All things are difficult before they are easy.\n\nyour lucky numbers are " << lucky_number1 << " " << lucky_number2 << " " << lucky_number3 << " " << lucky_number4;
}
else if (fortune==2) {
  std::cout << "The early bird gets the worm, but the second mouse gets the cheese.\n\nyour lucky numbers are " << lucky_number1 << " " << lucky_number2 << " " << lucky_number3 << " " << lucky_number4;
}
else if (fortune==3) {
  std::cout << "Someone in your life needs a letter from you.\n\nyour lucky numbers are " << lucky_number1 << " " << lucky_number2 << " " << lucky_number3 << " " << lucky_number4;
