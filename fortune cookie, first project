  srand(time(NULL));
  int fortune = std::rand() % 6;
  int lucky_number1 = std::rand () % 50;
  int lucky_number2 = std::rand () % 50;
  int lucky_number3 = std::rand () % 50;
  int lucky_number4 = std::rand () % 50;
  int lucky_number5 = std::rand () % 50;
if (fortune==0) {
  std::cout << "Don't pursue happiness â€“ create it.\n\nyour lucky numbers are " << lucky_number1 << " " << lucky_number2 << " " << lucky_number3 << " " << lucky_number4;
}
